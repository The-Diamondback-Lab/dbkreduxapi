{
    "version": 2,
    "name": "dbk-api",
    "builds": [
        { "src": "app.js", "use": "@now/node" },
        { "src": "!app.js", "use": "@now/static"}
    ],
    "routes": [
        { "src": "/articles", "dest": "app.js" },
        { "src": "/articles/(.*)", "dest": "app.js"},
        { "src": "/featured_article", "dest": "app.js"},
        { "src": "/menu/(.*)", "dest": "app.js"},
        { "src": "/category/(.*)", "dest": "app.js"},
        { "src": "/author/(.*)", "dest": "app.js"},
        { "src": "/pages", "dest": "app.js"},
        { "src": "/pages/(.*)", "dest": "app.js"},
        { "src": "/(.*)", "dest": "doc/$1"}
    ]
}