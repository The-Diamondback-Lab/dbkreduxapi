{
    "version": 2,
    "name": "dbk-api",
    "builds": [
        { "src": "app.js", "use": "@now/node" },
        { "src": "!app.js", "use": "@now/static"}
    ],
    "routes": [
        { "src": "/", "dest": "doc/index.html"},
        { "src": "/css/(.*)", "dest": "doc/css/$1"},
        { "src": "/fonts/(.*)", "dest": "doc/fonts/$1"},
        { "src": "/img/(.*)", "dest": "doc/img/$1"},
        { "src": "/locales/(.*)", "dest": "doc/locales/$1"},
        { "src": "/utils/(.*)", "dest": "doc/utils/$1"},
        { "src": "/vendor/(.*)", "dest": "doc/vendor/$1"},
        { "src": "/main.js", "dest": "doc/main.js"},
        { "src": "/api_data.js", "dest": "doc/api_data.js"},
        { "src": "/api_data.json", "dest": "doc/api_data.json"},
        { "src": "/api_project.js", "dest": "doc/api_project.js"},
        { "src": "/api_project.json", "dest": "doc/api_project.json"},

        
        { "src": "/(.*)", "dest": "app.js" }
    ]
}