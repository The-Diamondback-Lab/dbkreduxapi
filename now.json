{
    "version": 2,
    "name": "dbk-api",
    "builds": [
        { "src": "news/app.js", "use": "@now/node" },
        { "src": "salary/app.js", "use": "@now/node"},

        { "src": "docs/javascripts/*", "use": "@now/static"},
        { "src": "docs/stylesheets/*", "use": "@now/static"},
        { "src": "docs/index.html", "use": "@now/static"}

    ],
    "routes": [
        { "src": "/articles", "dest": "news/app.js" },
        { "src": "/articles/(.*)", "dest": "news/app.js"},
        { "src": "/featured_article", "dest": "news/app.js"},
        { "src": "/menu/(.*)", "dest": "news/app.js"},
        { "src": "/category/(.*)", "dest": "news/app.js"},
        { "src": "/author/(.*)", "dest": "news/app.js"},
        { "src": "/pages", "dest": "news/app.js"},
        { "src": "/pages/(.*)", "dest": "news/app.js"},

        { "src": "/salary", "dest": "salary/app.js"},
        { "src": "/salary/(.*)", "dest": "salary/app.js"},

        { "src": "/", "dest": "docs/index.html"},
        { "src": "/(.*)", "dest": "docs/$1"}

    ],
    "env": {
        "REDISPWD": "@redispwd",
        "DB_HOST": "@salguide_db_host",
        "DB_USER": "@salguide_db_user",
        "DB_PASSWORD": "@salguide_db_password",
        "DB_PORT": "@salguide_db_port",
        "DB_NAME": "@salguide_db_name"
    },
    "files": [
        "doc"
    ] 
}